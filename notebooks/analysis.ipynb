# Amazon Sales Analysis - Data Scientist Portfolio Project

# 1️⃣ Import libraries
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

# 2️⃣ Load dataset
df = pd.read_csv('../data/sales.csv')
df.head()

# 3️⃣ Data Cleaning
# Check for missing values
print(df.isnull().sum())

# Example: Fill missing values if any
# df['Quantity'] = df['Quantity'].fillna(0)

# 4️⃣ Exploratory Data Analysis (EDA)
# Sales by Category
category_sales = df.groupby('Category')['Price'].sum().reset_index()
sns.barplot(x='Category', y='Price', data=category_sales)
plt.title('Total Sales by Category')
plt.show()

# 5️⃣ Sales over time
df['OrderDate'] = pd.to_datetime(df['OrderDate'])
sales_time = df.groupby('OrderDate')['Price'].sum().reset_index()
plt.plot(sales_time['OrderDate'], sales_time['Price'])
plt.title('Sales Over Time')
plt.xticks(rotation=45)
plt.show()
